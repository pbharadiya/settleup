<h1>Groups</h1>

<% if @groups.any? %>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Actions</th>
          <th>Created on</th>
        </tr>
      </thead>
      <tbody>
        <% @groups.each.with_index(1) do |group, i| %>
          <tr>
            <td><%= i %></td>
            <td><%= link_to group.name, group %></td>
            <td>
              <%= link_to 'Edit', edit_group_path(group) %> | 
              <%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
            <td><%= display_date(group.created_at) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p><i>There are no group created yet. Create one using button below.</i></p>
<% end %>

<%= link_to 'New Group', new_group_path, class: "btn btn-primary" %>
